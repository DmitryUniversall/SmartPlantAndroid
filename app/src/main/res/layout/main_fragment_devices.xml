<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexDirection="column"
            app:alignItems="center">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:flexDirection="row"
                app:justifyContent="center"
                app:alignItems="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MyDevices"
                    android:textStyle="bold"
                    android:textSize="38sp"
                    android:textColor="@color/text_primary" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:flexDirection="column"
                android:padding="10dp">

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flexDirection="column"
                    app:justifyContent="space_between"
                    android:padding="10dp">

                <androidx.cardview.widget.CardView
                        android:id="@+id/deviceCard1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/background_primary">

                    <com.smartplant.smartplantandroid.ui.views.views.main.fragments.devices.components.DeviceItemComponent
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:title="SmartPlant"
                            app:description="Первое устройство SmartPlant"
                            app:icon="@drawable/icon_house"
                            app:progress="70"
                            app:status="true"/>
                </androidx.cardview.widget.CardView>

                <com.smartplant.smartplantandroid.utils.ui.components.CustomButton
                        android:id="@+id/addDeviceButton"
                        android:layout_width="match_parent"
                        android:text="@string/AddDevice"
                        android:layout_height="43dp" />
            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>