<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/startActivity"
        tools:context=".ui.views.views.StartActivity"
        android:background="@color/background_primary">

    <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            app:flexDirection="column"
            app:justifyContent="space_between">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                app:justifyContent="center"
                app:alignItems="center">
            <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/appLogo" />

            <TextView
                    android:id="@+id/welcome_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome"
                    android:textSize="30sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>

            <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcomeDescription"
                    android:textSize="21sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="24dp"
                    android:gravity="center" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                app:alignItems="center"
                android:padding="15dp">
            <com.smartplant.smartplantandroid.utils.ui.components.CustomButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="@string/loginAction"
                    android:layout_marginBottom="10dp"/>

            <com.smartplant.smartplantandroid.utils.ui.components.CustomButton
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="@string/registerAction"/>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
