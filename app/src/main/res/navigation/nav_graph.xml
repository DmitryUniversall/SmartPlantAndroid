<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_graph"
        app:startDestination="@id/nav_devices">

    <fragment
            android:id="@+id/nav_devices"
            android:name="com.smartplant.smartplantandroid.ui.views.views.main.fragments.devices.DevicesFragment"
            android:label="@string/MyDevices" >
        <action
                android:id="@+id/action_nav_devices_to_nav_device_detail"
                app:destination="@id/nav_device_detail"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
            android:id="@+id/nav_settings"
            android:name="com.smartplant.smartplantandroid.ui.views.views.main.fragments.SettingsFragment"
            android:label="@string/Settings" />
    <fragment
            android:id="@+id/nav_notifications"
            android:name="com.smartplant.smartplantandroid.ui.views.views.main.fragments.NotificationsFragment"
            android:label="@string/Notifications" />
    <fragment
            android:id="@+id/nav_device_detail"
            android:name="com.smartplant.smartplantandroid.ui.views.views.main.fragments.devices.DeviceDetailFragment"
            android:label="@string/Detail" >
    </fragment>
</navigation>
